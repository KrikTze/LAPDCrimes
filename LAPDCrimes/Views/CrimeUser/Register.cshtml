@model RegisterModel



<div class="col-12 col-md-6 col-xl-5 mx-auto my-auto ">
    <div class="card border-1 rounded-4">
        <div class="card-body p-3 p-md-4 p-xl-5">
            <div class="row">
                <div class="col-12">
                    <div class="mb-4">
                        <h2 class="h3">Registration</h2>
                        <h3 class="fs-6 fw-normal text-secondary m-0">Enter your details to register</h3>
                    </div>
                </div>
            </div>
            <form method="post" asp-controller="CrimeUser" asp-action="register">
                <div class="row gy-3 overflow-hidden">
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <input asp-for="@Model.username" class="form-control" placeholder="Username" />
                            <label class=" form-label" asp-for="@Model.username"> Username</label>
                            <span asp-validation-for="@Model.username" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-floating mb-3">
                            <input asp-for="@Model.firstName" class="form-control" placeholder="First Name" />
                            <label class=" form-label" asp-for="@Model.firstName"> First Name</label>
                            <span asp-validation-for="@Model.firstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-floating mb-3">
                            <input asp-for="@Model.lastName" class="form-control" placeholder="Last Name" />
                            <label class=" form-label" asp-for="@Model.lastName"> Last Name</label>
                            <span asp-validation-for="@Model.lastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <input asp-for="@Model.Email" class="form-control" placeholder="Email" />
                            <label class=" form-label" asp-for="@Model.Email"> Email </label>
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-floating mb-3">
                            <input asp-for="@Model.password" class="form-control" placeholder="Password" />
                            <label class=" form-label" asp-for="@Model.password"> Password </label>
                            <span asp-validation-for="@Model.password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-floating mb-3">
                            <input asp-for="@Model.confirmPassword" class="form-control" placeholder="Confirm Password" />
                            <label class=" form-label" asp-for="@Model.confirmPassword"> Confirm Password </label>
                            <span asp-validation-for="@Model.confirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <select asp-for="gender" placeholder="Choose Gender" class="form-control" asp-items="Html.GetEnumSelectList<LAPDCrimes.Models.Enums.GenderEnum>()"></select>
                            <label asp-for="gender" class="form-label">Choose gender</label>
                            <span asp-validation-for="gender" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="d-grid">
                            <button class="btn btn-primary btn-lg" type="submit">Sign up</button>
                        </div>
                    </div>
                </div>
            </form>
            <div class="row">
                <div class="col-12">
                    <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-end mt-4">
                        <p class="m-0 text-secondary text-center">Already have an account? <a asp-controller="CrimeUser" asp-action="Login" class="link-primary text-decoration-none">Sign in</a></p>
                    </div>
                </div>
            </div>
